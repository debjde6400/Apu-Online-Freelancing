<h1>New bid</h1>

<%= form_with model: [@project, @bid] do |f| %>
  <%= render "shared/form_errors", form: f %>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.hidden_field :bidding_user_id, value: current_user.id %>

  <%= f.submit "Bid", class: "btn btn-primary" %>
<% end %>

