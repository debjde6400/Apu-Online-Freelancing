<h1>Edit bid</h1>

<%= form_with model: @bid do |f| %>
  <%= render "shared/form_errors", form: f %>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Update Bid", class: "btn btn-primary" %>
<% end %>

