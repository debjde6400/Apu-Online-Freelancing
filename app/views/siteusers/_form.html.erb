<%= form_with model: @user do |f| %>
  <%= render "shared/form_errors", form: f %>

  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="custom-group-user">
      <%= f.radio_button :freelancer, true, class: "btn-check" %>
      <%= f.label :freelancer, "I'm a Freelancer", value: "true", class: "btn btn-outline-primary" %>
      
      <%= f.radio_button :freelancer, false, checked: true, class: "btn-check" %>
      <%= f.label :freelancer, "I'm a Client", value: "false", class: "btn btn-outline-primary" %>
      
  </div>
  
  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :mobile, class: "form-label" %>
    <%= f.text_field :mobile, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_area :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :qualification, "Qualification (Set None if registering as client)", class: "form-label" %>
    <%= f.select :qualification, options_for_select(["None", "Class 12 or below", "Bachelor degree", "Masters degree", "Doctorate"], f.object.qualification || @user.qualification), {}, { class: "form-select" } %>
  </div>
  
  <div class="form-group">
    <%= f.label :experience, class: "form-label" %>
    <%= f.text_area :experience, class: 'form-control', placeholder: "Freelancers can describe their work positions along with time periods here. Clients can provide a brief description of establishments and  technologies handled by them." %>
  </div>

  <%= f.label :skills, "Choose your skills", class: "form-label" %>

  <div class="form-group">
    <% get_all_skill.each do |key| %>
      <div class="form-check form-check-inline">
        <%= f.check_box :skills, { class: "form-check-input", multiple: true, checked: f.object.skills&.include?(key.to_s) }, key, nil %>
        <%= f.label key, class: "form-check-label" %>
      </div>
    <% end %>
  </div>
  
  
  
  <div class="form-group">
    <%= f.label :industry, class: "form-label", class: "form-label" %>
    <%= f.select :industry, options_for_select(get_all_industry, f.object.industry || @user.industry), {}, { class: "form-select" } %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm your password", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <%= f.submit task, class: "btn btn-primary" %>
<% end %>
